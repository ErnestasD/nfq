{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-center mt-5">
        <h3 class="ml-5">Laukiantys klientai</h3>
    </div>
    <div class="d-flex justify-content-center mt-5">
        <table class="table w-25">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" class="pl-5">Vardas</th>
                </tr>
            </thead>
            <tbody>
                {% for client in waitingClients %}
                    <tr>
                        <th scope="row">{{ client.id }}</th>
                        <td class="pl-5">{{ client.name }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <a class="btn btn-warning float-right mt-5" href={{ path('landing_page') }}>Pagrindinis puslapis</a>
</div>
{% endblock %}