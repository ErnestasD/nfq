{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h3>Laukiantys klientai</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Vardas</th>
                    <th scope="col">Veiksmas</th>
                </tr>
            </thead>
            <tbody>
                {% for client in allClients %}
                <tr>
                    <th scope="row">{{ client.id }}</th>
                    <td>{{ client.name }}</td>
                    {% if allClients|first == client and client.startedat == null %}
                        <td>
                            <a class="btn btn-primary" href="{{ path('start_visit', {'id': client.id }) }}">Pradėti vizitą</a>
                        </td>
                    {% elseif client.startedat != null %}
                        <td>
                            <a class="btn btn-danger" href="{{ path('end_visit', {'id': client.id }) }}">Baigti vizitą</a>
                        </td>
                    {% endif %}
                </tr>
                {% endfor %}
             </tbody>
        </table>
    </div>
{% endblock %}